# ===== Base =====
TZ=Asia/Shanghai
# Repository, e.g. registry.cn-hangzhou.aliyuncs.com/yourspace
REGISTRY=
# Image name prefix (can be empty)
REPO_PREFIX=demo-

# Auto tagging (recommended to inject in CI)
BUILD_DATE=2025-10-29T00:00:00Z
GIT_SHA=dev-local     # Fixed for local development; in CI use: git rev-parse --short HEAD

# ===== Version =====
ADMIN_VERSION=2.4.0-2025.10.29-dev
WORKER_VERSION=2.4.0-2025.10.29-dev

# -- MySQL --
MYSQL_HOST=172.17.0.1
MYSQL_PORT=3306
MYSQL_DB=xxl_job
MYSQL_USER=xxl
MYSQL_PASSWORD=xxl_PaSsW0rD

# -- Admin Port (host) --
ADMIN_HTTP_PORT=18080
ADMIN_DEBUG_PORT=15005

# -- Worker Port (container) --
WORKER_EXECUTOR_PORT=9999

# -- Worker debug ports (host side, each different) --
WORKER1_DEBUG_PORT=15006
WORKER2_DEBUG_PORT=15007

# -- Executor appName (machines with the same name are treated as one cluster) --
WORKER1_APPNAME=spring-executor
WORKER2_APPNAME=spring-executor

# -- Access token (must match between Admin and Worker) --
XXL_JOB_ACCESS_TOKEN=xxl-secret-token

# -- Log rotation --
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# -- Host log/data directories (mapped to /data) --
ADMIN_DATA_DIR=./xxl_data/admin
WORKER1_DATA_DIR=./xxl_data/worker1
WORKER2_DATA_DIR=./xxl_data/worker2
